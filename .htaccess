# Redirecciones 301 permanentes para Google Search Console
# Redirigir URLs sin barra final a URLs con barra final

RewriteEngine On

# Forzar HTTPS (si no está habilitado por el servidor)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Añadir barra final a directorios (evitar bucles)
# Solo si NO tiene barra final Y NO es un archivo
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ $1/ [L,R=301]

# Asegurar que se sirva index.html cuando se accede a directorios
DirectoryIndex index.html

# Configuración de caché para mejorar rendimiento
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# Comprensión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>